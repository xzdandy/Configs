<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 PaperColor-Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  PaperColor-Light scheme by Nguyen Nguyen (http://github.com/NLKNguyen)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#4d4d4c" background="#f3f3f3"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#d0d0d0"/>
  <style name="CurrentLine" background="#949494"/>
  <style name="LineNumber" foreground="#949494"/>
  <style name="CurrentLineNumber" foreground="#808080" bold="true"/>
  <style name="SearchResult" background="#f3f3f3"/>
  <style name="Parentheses" background="#d0d0d0" />
  <style name="ParenthesesMismatch" background="#d7005f" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#262626" background="#949494"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#949494"/>
  <style name="Occurrences.Rename" background="#808080"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d75f00"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d75f00"/>
  <style name="String" foreground="#718c00"/>
  <style name="Keyword" foreground="#d7005f"/>
  <style name="Operator" foreground="#4d4d4c"/>
  <style name="Preprocessor" foreground="#005f87"/>
  <style name="Label" foreground="#8959a8"/>

  <!-- types, classes -->
  <style name="Type" foreground="#4271ae"/>
  <style name="PrimitiveType" foreground="#d7005f"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#005f87"/>
  <style name="VirtualMethod" foreground="#005f87" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#262626"/>
  <style name="Local" foreground="#4d4d4c"/>
  <style name="Global" foreground="#4d4d4c"/>
  <style name="Static" foreground="#4d4d4c"/>
  <style name="JsScopeVar" foreground="#4d4d4c" italic="true"/>
  <style name="JsImportVar" foreground="#4d4d4c" italic="true"/>
  <style name="JsGlobalVar" foreground="#4d4d4c" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d0d0d0"/>

  <!-- comments -->
  <style name="Comment" foreground="#949494"/>
  <style name="DisabledCode" foreground="#949494"/>
  <style name="Doxygen.Comment" foreground="#949494"/>
  <style name="Doxygen.Tag" foreground="#949494"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#d7005f"/>
  <style name="Binding" foreground="#8959a8"/>
  <style name="QmlExternalId" foreground="#005f87" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#005f87" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#d7005f"/>
  <style name="DiffLocation" foreground="#005f87"/>
  <style name="AddedLine" foreground="#718c00"/>
  <style name="RemovedLine" foreground="#4271ae"/>
  <style name="LogChangeLine" foreground="#8959a8"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#d7005f"/>
  <style name="DiffContextLine" foreground="#005f87"/>
  <style name="DiffSourceLine" foreground="#718c00"/>
  <style name="DiffSourceChar" foreground="#4271ae" background="#f3f3f3"/>
  <style name="DiffDestLine" foreground="#718c00"/>
  <style name="DiffDestChar" foreground="#4271ae" background="#f3f3f3"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#8959a8" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#8959a8" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#4271ae" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#4271ae" underlineStyle="DotLine"/>
</style-scheme>
