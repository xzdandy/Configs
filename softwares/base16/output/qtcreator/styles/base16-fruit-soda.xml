<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Fruit Soda">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Fruit Soda scheme by jozip
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#515151" background="#f1ecf1"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#d8d5d5"/>
  <style name="CurrentLine" background="#b5b4b6"/>
  <style name="LineNumber" foreground="#b5b4b6"/>
  <style name="CurrentLineNumber" foreground="#979598" bold="true"/>
  <style name="SearchResult" background="#e0dee0"/>
  <style name="Parentheses" background="#d8d5d5" />
  <style name="ParenthesesMismatch" background="#611fce" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#2d2c2c" background="#b5b4b6"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#b5b4b6"/>
  <style name="Occurrences.Rename" background="#979598"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#fe6d08"/>

  <!-- language primitives -->
  <style name="Number" foreground="#fe6d08"/>
  <style name="String" foreground="#47f74c"/>
  <style name="Keyword" foreground="#611fce"/>
  <style name="Operator" foreground="#515151"/>
  <style name="Preprocessor" foreground="#2931df"/>
  <style name="Label" foreground="#fe3e31"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f7e203"/>
  <style name="PrimitiveType" foreground="#611fce"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#2931df"/>
  <style name="VirtualMethod" foreground="#2931df" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#474545"/>
  <style name="Local" foreground="#515151"/>
  <style name="Global" foreground="#515151"/>
  <style name="Static" foreground="#515151"/>
  <style name="JsScopeVar" foreground="#515151" italic="true"/>
  <style name="JsImportVar" foreground="#515151" italic="true"/>
  <style name="JsGlobalVar" foreground="#515151" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d8d5d5"/>

  <!-- comments -->
  <style name="Comment" foreground="#b5b4b6"/>
  <style name="DisabledCode" foreground="#b5b4b6"/>
  <style name="Doxygen.Comment" foreground="#b5b4b6"/>
  <style name="Doxygen.Tag" foreground="#b5b4b6"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#611fce"/>
  <style name="Binding" foreground="#fe3e31"/>
  <style name="QmlExternalId" foreground="#2931df" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#2931df" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#611fce"/>
  <style name="DiffLocation" foreground="#2931df"/>
  <style name="AddedLine" foreground="#47f74c"/>
  <style name="RemovedLine" foreground="#f7e203"/>
  <style name="LogChangeLine" foreground="#fe3e31"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#611fce"/>
  <style name="DiffContextLine" foreground="#2931df"/>
  <style name="DiffSourceLine" foreground="#47f74c"/>
  <style name="DiffSourceChar" foreground="#f7e203" background="#e0dee0"/>
  <style name="DiffDestLine" foreground="#47f74c"/>
  <style name="DiffDestChar" foreground="#f7e203" background="#e0dee0"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#fe3e31" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#fe3e31" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#f7e203" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#f7e203" underlineStyle="DotLine"/>
</style-scheme>
