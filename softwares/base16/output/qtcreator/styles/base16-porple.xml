<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Porple">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Porple scheme by Niek den Breeje (https://github.com/AuditeMarlow)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d8d8d8" background="#292c36"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#474160"/>
  <style name="CurrentLine" background="#65568a"/>
  <style name="LineNumber" foreground="#65568a"/>
  <style name="CurrentLineNumber" foreground="#b8b8b8" bold="true"/>
  <style name="SearchResult" background="#333344"/>
  <style name="Parentheses" background="#474160" />
  <style name="ParenthesesMismatch" background="#b74989" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f8f8f8" background="#65568a"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#65568a"/>
  <style name="Occurrences.Rename" background="#b8b8b8"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d28e5d"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d28e5d"/>
  <style name="String" foreground="#95c76f"/>
  <style name="Keyword" foreground="#b74989"/>
  <style name="Operator" foreground="#d8d8d8"/>
  <style name="Preprocessor" foreground="#8485ce"/>
  <style name="Label" foreground="#f84547"/>

  <!-- types, classes -->
  <style name="Type" foreground="#efa16b"/>
  <style name="PrimitiveType" foreground="#b74989"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#8485ce"/>
  <style name="VirtualMethod" foreground="#8485ce" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e8e8e8"/>
  <style name="Local" foreground="#d8d8d8"/>
  <style name="Global" foreground="#d8d8d8"/>
  <style name="Static" foreground="#d8d8d8"/>
  <style name="JsScopeVar" foreground="#d8d8d8" italic="true"/>
  <style name="JsImportVar" foreground="#d8d8d8" italic="true"/>
  <style name="JsGlobalVar" foreground="#d8d8d8" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#474160"/>

  <!-- comments -->
  <style name="Comment" foreground="#65568a"/>
  <style name="DisabledCode" foreground="#65568a"/>
  <style name="Doxygen.Comment" foreground="#65568a"/>
  <style name="Doxygen.Tag" foreground="#65568a"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b74989"/>
  <style name="Binding" foreground="#f84547"/>
  <style name="QmlExternalId" foreground="#8485ce" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#8485ce" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b74989"/>
  <style name="DiffLocation" foreground="#8485ce"/>
  <style name="AddedLine" foreground="#95c76f"/>
  <style name="RemovedLine" foreground="#efa16b"/>
  <style name="LogChangeLine" foreground="#f84547"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b74989"/>
  <style name="DiffContextLine" foreground="#8485ce"/>
  <style name="DiffSourceLine" foreground="#95c76f"/>
  <style name="DiffSourceChar" foreground="#efa16b" background="#333344"/>
  <style name="DiffDestLine" foreground="#95c76f"/>
  <style name="DiffDestChar" foreground="#efa16b" background="#333344"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#f84547" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#f84547" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#efa16b" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#efa16b" underlineStyle="DotLine"/>
</style-scheme>
