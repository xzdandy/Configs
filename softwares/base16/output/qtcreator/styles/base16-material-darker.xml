<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Material Darker">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Material Darker scheme by Nate Peterson
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#EEFFFF" background="#212121"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#353535"/>
  <style name="CurrentLine" background="#4A4A4A"/>
  <style name="LineNumber" foreground="#4A4A4A"/>
  <style name="CurrentLineNumber" foreground="#B2CCD6" bold="true"/>
  <style name="SearchResult" background="#303030"/>
  <style name="Parentheses" background="#353535" />
  <style name="ParenthesesMismatch" background="#C792EA" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#FFFFFF" background="#4A4A4A"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#4A4A4A"/>
  <style name="Occurrences.Rename" background="#B2CCD6"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#F78C6C"/>

  <!-- language primitives -->
  <style name="Number" foreground="#F78C6C"/>
  <style name="String" foreground="#C3E88D"/>
  <style name="Keyword" foreground="#C792EA"/>
  <style name="Operator" foreground="#EEFFFF"/>
  <style name="Preprocessor" foreground="#82AAFF"/>
  <style name="Label" foreground="#F07178"/>

  <!-- types, classes -->
  <style name="Type" foreground="#FFCB6B"/>
  <style name="PrimitiveType" foreground="#C792EA"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#82AAFF"/>
  <style name="VirtualMethod" foreground="#82AAFF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#EEFFFF"/>
  <style name="Local" foreground="#EEFFFF"/>
  <style name="Global" foreground="#EEFFFF"/>
  <style name="Static" foreground="#EEFFFF"/>
  <style name="JsScopeVar" foreground="#EEFFFF" italic="true"/>
  <style name="JsImportVar" foreground="#EEFFFF" italic="true"/>
  <style name="JsGlobalVar" foreground="#EEFFFF" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#353535"/>

  <!-- comments -->
  <style name="Comment" foreground="#4A4A4A"/>
  <style name="DisabledCode" foreground="#4A4A4A"/>
  <style name="Doxygen.Comment" foreground="#4A4A4A"/>
  <style name="Doxygen.Tag" foreground="#4A4A4A"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#C792EA"/>
  <style name="Binding" foreground="#F07178"/>
  <style name="QmlExternalId" foreground="#82AAFF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#82AAFF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#C792EA"/>
  <style name="DiffLocation" foreground="#82AAFF"/>
  <style name="AddedLine" foreground="#C3E88D"/>
  <style name="RemovedLine" foreground="#FFCB6B"/>
  <style name="LogChangeLine" foreground="#F07178"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#C792EA"/>
  <style name="DiffContextLine" foreground="#82AAFF"/>
  <style name="DiffSourceLine" foreground="#C3E88D"/>
  <style name="DiffSourceChar" foreground="#FFCB6B" background="#303030"/>
  <style name="DiffDestLine" foreground="#C3E88D"/>
  <style name="DiffDestChar" foreground="#FFCB6B" background="#303030"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#F07178" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#F07178" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#FFCB6B" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#FFCB6B" underlineStyle="DotLine"/>
</style-scheme>
