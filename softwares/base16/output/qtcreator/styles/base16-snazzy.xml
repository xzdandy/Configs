<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Snazzy">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Snazzy scheme by Chawye Hsu (https://github.com/h404bi) based on Hyper Snazzy Theme (https://github.com/sindresorhus/hyper-snazzy)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#e2e4e5" background="#282a36"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#43454f"/>
  <style name="CurrentLine" background="#78787e"/>
  <style name="LineNumber" foreground="#78787e"/>
  <style name="CurrentLineNumber" foreground="#a5a5a9" bold="true"/>
  <style name="SearchResult" background="#34353e"/>
  <style name="Parentheses" background="#43454f" />
  <style name="ParenthesesMismatch" background="#ff6ac1" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f1f1f0" background="#78787e"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#78787e"/>
  <style name="Occurrences.Rename" background="#a5a5a9"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ff9f43"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ff9f43"/>
  <style name="String" foreground="#5af78e"/>
  <style name="Keyword" foreground="#ff6ac1"/>
  <style name="Operator" foreground="#e2e4e5"/>
  <style name="Preprocessor" foreground="#57c7ff"/>
  <style name="Label" foreground="#ff5c57"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f3f99d"/>
  <style name="PrimitiveType" foreground="#ff6ac1"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#57c7ff"/>
  <style name="VirtualMethod" foreground="#57c7ff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#eff0eb"/>
  <style name="Local" foreground="#e2e4e5"/>
  <style name="Global" foreground="#e2e4e5"/>
  <style name="Static" foreground="#e2e4e5"/>
  <style name="JsScopeVar" foreground="#e2e4e5" italic="true"/>
  <style name="JsImportVar" foreground="#e2e4e5" italic="true"/>
  <style name="JsGlobalVar" foreground="#e2e4e5" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#43454f"/>

  <!-- comments -->
  <style name="Comment" foreground="#78787e"/>
  <style name="DisabledCode" foreground="#78787e"/>
  <style name="Doxygen.Comment" foreground="#78787e"/>
  <style name="Doxygen.Tag" foreground="#78787e"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#ff6ac1"/>
  <style name="Binding" foreground="#ff5c57"/>
  <style name="QmlExternalId" foreground="#57c7ff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#57c7ff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#ff6ac1"/>
  <style name="DiffLocation" foreground="#57c7ff"/>
  <style name="AddedLine" foreground="#5af78e"/>
  <style name="RemovedLine" foreground="#f3f99d"/>
  <style name="LogChangeLine" foreground="#ff5c57"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#ff6ac1"/>
  <style name="DiffContextLine" foreground="#57c7ff"/>
  <style name="DiffSourceLine" foreground="#5af78e"/>
  <style name="DiffSourceChar" foreground="#f3f99d" background="#34353e"/>
  <style name="DiffDestLine" foreground="#5af78e"/>
  <style name="DiffDestChar" foreground="#f3f99d" background="#34353e"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ff5c57" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ff5c57" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#f3f99d" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#f3f99d" underlineStyle="DotLine"/>
</style-scheme>
