<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Mellow Purple">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Mellow Purple scheme by gidsi
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#ffeeff" background="#1e0528"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#331354"/>
  <style name="CurrentLine" background="#320f55"/>
  <style name="LineNumber" foreground="#320f55"/>
  <style name="CurrentLineNumber" foreground="#873582" bold="true"/>
  <style name="SearchResult" background="#1A092D"/>
  <style name="Parentheses" background="#331354" />
  <style name="ParenthesesMismatch" background="#8991bb" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f8c0ff" background="#320f55"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#320f55"/>
  <style name="Occurrences.Rename" background="#873582"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#aa00a3"/>

  <!-- language primitives -->
  <style name="Number" foreground="#aa00a3"/>
  <style name="String" foreground="#05cb0d"/>
  <style name="Keyword" foreground="#8991bb"/>
  <style name="Operator" foreground="#ffeeff"/>
  <style name="Preprocessor" foreground="#550068"/>
  <style name="Label" foreground="#00d9e9"/>

  <!-- types, classes -->
  <style name="Type" foreground="#955ae7"/>
  <style name="PrimitiveType" foreground="#8991bb"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#550068"/>
  <style name="VirtualMethod" foreground="#550068" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#ffeeff"/>
  <style name="Local" foreground="#ffeeff"/>
  <style name="Global" foreground="#ffeeff"/>
  <style name="Static" foreground="#ffeeff"/>
  <style name="JsScopeVar" foreground="#ffeeff" italic="true"/>
  <style name="JsImportVar" foreground="#ffeeff" italic="true"/>
  <style name="JsGlobalVar" foreground="#ffeeff" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#331354"/>

  <!-- comments -->
  <style name="Comment" foreground="#320f55"/>
  <style name="DisabledCode" foreground="#320f55"/>
  <style name="Doxygen.Comment" foreground="#320f55"/>
  <style name="Doxygen.Tag" foreground="#320f55"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#8991bb"/>
  <style name="Binding" foreground="#00d9e9"/>
  <style name="QmlExternalId" foreground="#550068" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#550068" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#8991bb"/>
  <style name="DiffLocation" foreground="#550068"/>
  <style name="AddedLine" foreground="#05cb0d"/>
  <style name="RemovedLine" foreground="#955ae7"/>
  <style name="LogChangeLine" foreground="#00d9e9"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#8991bb"/>
  <style name="DiffContextLine" foreground="#550068"/>
  <style name="DiffSourceLine" foreground="#05cb0d"/>
  <style name="DiffSourceChar" foreground="#955ae7" background="#1A092D"/>
  <style name="DiffDestLine" foreground="#05cb0d"/>
  <style name="DiffDestChar" foreground="#955ae7" background="#1A092D"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#00d9e9" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#00d9e9" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#955ae7" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#955ae7" underlineStyle="DotLine"/>
</style-scheme>
