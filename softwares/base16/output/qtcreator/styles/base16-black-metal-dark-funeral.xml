<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Black Metal (Dark Funeral)">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Black Metal (Dark Funeral) scheme by metalelf0 (https://github.com/metalelf0)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#c1c1c1" background="#000000"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#222222"/>
  <style name="CurrentLine" background="#333333"/>
  <style name="LineNumber" foreground="#333333"/>
  <style name="CurrentLineNumber" foreground="#999999" bold="true"/>
  <style name="SearchResult" background="#121212"/>
  <style name="Parentheses" background="#222222" />
  <style name="ParenthesesMismatch" background="#999999" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#c1c1c1" background="#333333"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#333333"/>
  <style name="Occurrences.Rename" background="#999999"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#aaaaaa"/>

  <!-- language primitives -->
  <style name="Number" foreground="#aaaaaa"/>
  <style name="String" foreground="#d0dfee"/>
  <style name="Keyword" foreground="#999999"/>
  <style name="Operator" foreground="#c1c1c1"/>
  <style name="Preprocessor" foreground="#888888"/>
  <style name="Label" foreground="#5f8787"/>

  <!-- types, classes -->
  <style name="Type" foreground="#5f81a5"/>
  <style name="PrimitiveType" foreground="#999999"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#888888"/>
  <style name="VirtualMethod" foreground="#888888" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#999999"/>
  <style name="Local" foreground="#c1c1c1"/>
  <style name="Global" foreground="#c1c1c1"/>
  <style name="Static" foreground="#c1c1c1"/>
  <style name="JsScopeVar" foreground="#c1c1c1" italic="true"/>
  <style name="JsImportVar" foreground="#c1c1c1" italic="true"/>
  <style name="JsGlobalVar" foreground="#c1c1c1" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#222222"/>

  <!-- comments -->
  <style name="Comment" foreground="#333333"/>
  <style name="DisabledCode" foreground="#333333"/>
  <style name="Doxygen.Comment" foreground="#333333"/>
  <style name="Doxygen.Tag" foreground="#333333"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#999999"/>
  <style name="Binding" foreground="#5f8787"/>
  <style name="QmlExternalId" foreground="#888888" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#888888" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#999999"/>
  <style name="DiffLocation" foreground="#888888"/>
  <style name="AddedLine" foreground="#d0dfee"/>
  <style name="RemovedLine" foreground="#5f81a5"/>
  <style name="LogChangeLine" foreground="#5f8787"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#999999"/>
  <style name="DiffContextLine" foreground="#888888"/>
  <style name="DiffSourceLine" foreground="#d0dfee"/>
  <style name="DiffSourceChar" foreground="#5f81a5" background="#121212"/>
  <style name="DiffDestLine" foreground="#d0dfee"/>
  <style name="DiffDestChar" foreground="#5f81a5" background="#121212"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#5f8787" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#5f8787" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#5f81a5" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#5f81a5" underlineStyle="DotLine"/>
</style-scheme>
