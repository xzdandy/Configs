<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Woodland">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Woodland scheme by Jay Cornwall (https://jcornwall.com)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#cabcb1" background="#231e18"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#48413a"/>
  <style name="CurrentLine" background="#9d8b70"/>
  <style name="LineNumber" foreground="#9d8b70"/>
  <style name="CurrentLineNumber" foreground="#b4a490" bold="true"/>
  <style name="SearchResult" background="#302b25"/>
  <style name="Parentheses" background="#48413a" />
  <style name="ParenthesesMismatch" background="#bb90e2" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#e4d4c8" background="#9d8b70"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#9d8b70"/>
  <style name="Occurrences.Rename" background="#b4a490"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ca7f32"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ca7f32"/>
  <style name="String" foreground="#b7ba53"/>
  <style name="Keyword" foreground="#bb90e2"/>
  <style name="Operator" foreground="#cabcb1"/>
  <style name="Preprocessor" foreground="#88a4d3"/>
  <style name="Label" foreground="#d35c5c"/>

  <!-- types, classes -->
  <style name="Type" foreground="#e0ac16"/>
  <style name="PrimitiveType" foreground="#bb90e2"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#88a4d3"/>
  <style name="VirtualMethod" foreground="#88a4d3" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#d7c8bc"/>
  <style name="Local" foreground="#cabcb1"/>
  <style name="Global" foreground="#cabcb1"/>
  <style name="Static" foreground="#cabcb1"/>
  <style name="JsScopeVar" foreground="#cabcb1" italic="true"/>
  <style name="JsImportVar" foreground="#cabcb1" italic="true"/>
  <style name="JsGlobalVar" foreground="#cabcb1" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#48413a"/>

  <!-- comments -->
  <style name="Comment" foreground="#9d8b70"/>
  <style name="DisabledCode" foreground="#9d8b70"/>
  <style name="Doxygen.Comment" foreground="#9d8b70"/>
  <style name="Doxygen.Tag" foreground="#9d8b70"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#bb90e2"/>
  <style name="Binding" foreground="#d35c5c"/>
  <style name="QmlExternalId" foreground="#88a4d3" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#88a4d3" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#bb90e2"/>
  <style name="DiffLocation" foreground="#88a4d3"/>
  <style name="AddedLine" foreground="#b7ba53"/>
  <style name="RemovedLine" foreground="#e0ac16"/>
  <style name="LogChangeLine" foreground="#d35c5c"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#bb90e2"/>
  <style name="DiffContextLine" foreground="#88a4d3"/>
  <style name="DiffSourceLine" foreground="#b7ba53"/>
  <style name="DiffSourceChar" foreground="#e0ac16" background="#302b25"/>
  <style name="DiffDestLine" foreground="#b7ba53"/>
  <style name="DiffDestChar" foreground="#e0ac16" background="#302b25"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#d35c5c" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#d35c5c" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#e0ac16" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#e0ac16" underlineStyle="DotLine"/>
</style-scheme>
