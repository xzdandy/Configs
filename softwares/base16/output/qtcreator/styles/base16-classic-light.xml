<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Classic Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Classic Light scheme by Jason Heeris (http://heeris.id.au)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#303030" background="#F5F5F5"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#D0D0D0"/>
  <style name="CurrentLine" background="#B0B0B0"/>
  <style name="LineNumber" foreground="#B0B0B0"/>
  <style name="CurrentLineNumber" foreground="#505050" bold="true"/>
  <style name="SearchResult" background="#E0E0E0"/>
  <style name="Parentheses" background="#D0D0D0" />
  <style name="ParenthesesMismatch" background="#AA759F" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#151515" background="#B0B0B0"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#B0B0B0"/>
  <style name="Occurrences.Rename" background="#505050"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#D28445"/>

  <!-- language primitives -->
  <style name="Number" foreground="#D28445"/>
  <style name="String" foreground="#90A959"/>
  <style name="Keyword" foreground="#AA759F"/>
  <style name="Operator" foreground="#303030"/>
  <style name="Preprocessor" foreground="#6A9FB5"/>
  <style name="Label" foreground="#AC4142"/>

  <!-- types, classes -->
  <style name="Type" foreground="#F4BF75"/>
  <style name="PrimitiveType" foreground="#AA759F"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6A9FB5"/>
  <style name="VirtualMethod" foreground="#6A9FB5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#202020"/>
  <style name="Local" foreground="#303030"/>
  <style name="Global" foreground="#303030"/>
  <style name="Static" foreground="#303030"/>
  <style name="JsScopeVar" foreground="#303030" italic="true"/>
  <style name="JsImportVar" foreground="#303030" italic="true"/>
  <style name="JsGlobalVar" foreground="#303030" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#D0D0D0"/>

  <!-- comments -->
  <style name="Comment" foreground="#B0B0B0"/>
  <style name="DisabledCode" foreground="#B0B0B0"/>
  <style name="Doxygen.Comment" foreground="#B0B0B0"/>
  <style name="Doxygen.Tag" foreground="#B0B0B0"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#AA759F"/>
  <style name="Binding" foreground="#AC4142"/>
  <style name="QmlExternalId" foreground="#6A9FB5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6A9FB5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#AA759F"/>
  <style name="DiffLocation" foreground="#6A9FB5"/>
  <style name="AddedLine" foreground="#90A959"/>
  <style name="RemovedLine" foreground="#F4BF75"/>
  <style name="LogChangeLine" foreground="#AC4142"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#AA759F"/>
  <style name="DiffContextLine" foreground="#6A9FB5"/>
  <style name="DiffSourceLine" foreground="#90A959"/>
  <style name="DiffSourceChar" foreground="#F4BF75" background="#E0E0E0"/>
  <style name="DiffDestLine" foreground="#90A959"/>
  <style name="DiffDestChar" foreground="#F4BF75" background="#E0E0E0"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#AC4142" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#AC4142" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#F4BF75" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#F4BF75" underlineStyle="DotLine"/>
</style-scheme>
