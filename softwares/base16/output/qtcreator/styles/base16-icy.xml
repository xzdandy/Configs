<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Icy Dark">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Icy Dark scheme by icyphox (https://icyphox.ga)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#095b67" background="#021012"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#041f23"/>
  <style name="CurrentLine" background="#052e34"/>
  <style name="LineNumber" foreground="#052e34"/>
  <style name="CurrentLineNumber" foreground="#064048" bold="true"/>
  <style name="SearchResult" background="#031619"/>
  <style name="Parentheses" background="#041f23" />
  <style name="ParenthesesMismatch" background="#00acc1" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#109cb0" background="#052e34"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#052e34"/>
  <style name="Occurrences.Rename" background="#064048"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#b3ebf2"/>

  <!-- language primitives -->
  <style name="Number" foreground="#b3ebf2"/>
  <style name="String" foreground="#4dd0e1"/>
  <style name="Keyword" foreground="#00acc1"/>
  <style name="Operator" foreground="#095b67"/>
  <style name="Preprocessor" foreground="#00bcd4"/>
  <style name="Label" foreground="#16c1d9"/>

  <!-- types, classes -->
  <style name="Type" foreground="#80deea"/>
  <style name="PrimitiveType" foreground="#00acc1"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#00bcd4"/>
  <style name="VirtualMethod" foreground="#00bcd4" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#0c7c8c"/>
  <style name="Local" foreground="#095b67"/>
  <style name="Global" foreground="#095b67"/>
  <style name="Static" foreground="#095b67"/>
  <style name="JsScopeVar" foreground="#095b67" italic="true"/>
  <style name="JsImportVar" foreground="#095b67" italic="true"/>
  <style name="JsGlobalVar" foreground="#095b67" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#041f23"/>

  <!-- comments -->
  <style name="Comment" foreground="#052e34"/>
  <style name="DisabledCode" foreground="#052e34"/>
  <style name="Doxygen.Comment" foreground="#052e34"/>
  <style name="Doxygen.Tag" foreground="#052e34"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#00acc1"/>
  <style name="Binding" foreground="#16c1d9"/>
  <style name="QmlExternalId" foreground="#00bcd4" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#00bcd4" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#00acc1"/>
  <style name="DiffLocation" foreground="#00bcd4"/>
  <style name="AddedLine" foreground="#4dd0e1"/>
  <style name="RemovedLine" foreground="#80deea"/>
  <style name="LogChangeLine" foreground="#16c1d9"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#00acc1"/>
  <style name="DiffContextLine" foreground="#00bcd4"/>
  <style name="DiffSourceLine" foreground="#4dd0e1"/>
  <style name="DiffSourceChar" foreground="#80deea" background="#031619"/>
  <style name="DiffDestLine" foreground="#4dd0e1"/>
  <style name="DiffDestChar" foreground="#80deea" background="#031619"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#16c1d9" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#16c1d9" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#80deea" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#80deea" underlineStyle="DotLine"/>
</style-scheme>
