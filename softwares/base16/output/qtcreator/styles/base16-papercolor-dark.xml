<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 PaperColor Dark">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  PaperColor Dark scheme by Jon Leopard (http://github.com/jonleopard) based on PaperColor Theme (https://github.com/NLKNguyen/papercolor-theme)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#808080" background="#1c1c1c"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#5faf00"/>
  <style name="CurrentLine" background="#d7af5f"/>
  <style name="LineNumber" foreground="#d7af5f"/>
  <style name="CurrentLineNumber" foreground="#5fafd7" bold="true"/>
  <style name="SearchResult" background="#af005f"/>
  <style name="Parentheses" background="#5faf00" />
  <style name="ParenthesesMismatch" background="#00afaf" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#d0d0d0" background="#d7af5f"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#d7af5f"/>
  <style name="Occurrences.Rename" background="#5fafd7"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#5faf5f"/>

  <!-- language primitives -->
  <style name="Number" foreground="#5faf5f"/>
  <style name="String" foreground="#af87d7"/>
  <style name="Keyword" foreground="#00afaf"/>
  <style name="Operator" foreground="#808080"/>
  <style name="Preprocessor" foreground="#ff5faf"/>
  <style name="Label" foreground="#585858"/>

  <!-- types, classes -->
  <style name="Type" foreground="#afd700"/>
  <style name="PrimitiveType" foreground="#00afaf"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#ff5faf"/>
  <style name="VirtualMethod" foreground="#ff5faf" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#d7875f"/>
  <style name="Local" foreground="#808080"/>
  <style name="Global" foreground="#808080"/>
  <style name="Static" foreground="#808080"/>
  <style name="JsScopeVar" foreground="#808080" italic="true"/>
  <style name="JsImportVar" foreground="#808080" italic="true"/>
  <style name="JsGlobalVar" foreground="#808080" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#5faf00"/>

  <!-- comments -->
  <style name="Comment" foreground="#d7af5f"/>
  <style name="DisabledCode" foreground="#d7af5f"/>
  <style name="Doxygen.Comment" foreground="#d7af5f"/>
  <style name="Doxygen.Tag" foreground="#d7af5f"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#00afaf"/>
  <style name="Binding" foreground="#585858"/>
  <style name="QmlExternalId" foreground="#ff5faf" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#ff5faf" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#00afaf"/>
  <style name="DiffLocation" foreground="#ff5faf"/>
  <style name="AddedLine" foreground="#af87d7"/>
  <style name="RemovedLine" foreground="#afd700"/>
  <style name="LogChangeLine" foreground="#585858"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#00afaf"/>
  <style name="DiffContextLine" foreground="#ff5faf"/>
  <style name="DiffSourceLine" foreground="#af87d7"/>
  <style name="DiffSourceChar" foreground="#afd700" background="#af005f"/>
  <style name="DiffDestLine" foreground="#af87d7"/>
  <style name="DiffDestChar" foreground="#afd700" background="#af005f"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#585858" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#585858" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#afd700" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#afd700" underlineStyle="DotLine"/>
</style-scheme>
